#include <iostream>
using namespace std;
int main() {
  int i,j,k,height;
  cout<<"請輸入三角形高度：";
  cin>>height;
  if(9>height,height>0)
  {
    for(i=0;i<height+1;i++)
    {
      for(k=height;k>i;k--)
      {
        cout<<" ";
      }
      for(j=0;j<i;j++)
      {
        cout<<"#";
      }
      cout<<"\n";
    }
  }else {
    cout<<"輸入的值超出範圍";
  }
}
